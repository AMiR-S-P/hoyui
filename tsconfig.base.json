{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hoyui/hoyjs": ["libs/hoyjs/src/index.ts"],
      "@hoyui/hoyreact": ["libs/hoyreact/src/index.ts"],
      "@hoyui/icons": ["libs/icons"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
